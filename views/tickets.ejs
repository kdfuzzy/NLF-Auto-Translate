<%- include("layout", {
    title: "Tickets",
    body: `
<h1 class="text-3xl font-bold mb-6">All Tickets</h1>

<table class="w-full bg-gray-800 rounded-xl overflow-hidden">
    <thead class="bg-gray-700">
        <tr>
            <th class="p-4 text-left">ID</th>
            <th class="p-4 text-left">User</th>
            <th class="p-4 text-left">Type</th>
            <th class="p-4 text-left">Status</th>
            <th class="p-4 text-left">Action</th>
        </tr>
    </thead>
    <tbody>
        <% for (let t of tickets) { %>
        <tr class="border-b border-gray-700">
            <td class="p-4"><%= t.id %></td>
            <td class="p-4"><%= t.username %></td>
            <td class="p-4"><%= t.type %></td>
            <td class="p-4">
                <% if (t.status === "open") { %>
                    <span class="text-yellow-400 font-bold">Open</span>
                <% } else { %>
                    <span class="text-green-400 font-bold">Closed</span>
                <% } %>
            </td>

            <td class="p-4">
                <a href="https://discord.com/channels/<%= guild %>/<%= t.channel %>"
                   class="bg-indigo-600 px-3 py-2 rounded hover:bg-indigo-700">
                   Open Channel
                </a>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>
    `
}) %>
