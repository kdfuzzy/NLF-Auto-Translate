<%- include("layout", { title: "Dashboard", body: "" }) %>

<div class="flex items-center gap-4 mb-10">
    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar || '0' %>.png"
         onerror="this.src='https://cdn.discordapp.com/embed/avatars/1.png'"
         class="w-20 h-20 rounded-full shadow-lg">

    <div>
        <h1 class="text-3xl font-bold">Welcome, <%= user.username %>!</h1>
        <p class="text-gray-400">Here is your overview.</p>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-8">

    <div class="bg-gray-800 p-6 rounded-xl shadow-lg">
        <h2 class="text-xl font-semibold mb-3">Total Tickets</h2>
        <p class="text-4xl text-purple-400 font-bold"><%= stats.total %></p>
    </div>

    <div class="bg-gray-800 p-6 rounded-xl shadow-lg">
        <h2 class="text-xl font-semibold mb-3">Open Tickets</h2>
        <p class="text-4xl text-yellow-400 font-bold"><%= stats.open %></p>
    </div>

    <div class="bg-gray-800 p-6 rounded-xl shadow-lg">
        <h2 class="text-xl font-semibold mb-3">Closed Tickets</h2>
        <p class="text-4xl text-green-400 font-bold"><%= stats.closed %></p>
    </div>

</div>
