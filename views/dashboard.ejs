<%- include("layout", {
title: "Dashboard",
body: `
<div class="flex items-center gap-4 mb-10">
    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar ?? '0' %>.png"
         onerror="this.src='https://cdn.discordapp.com/embed/avatars/1.png'"
         class="w-20 h-20 rounded-full" />
    <div>
        <h1 class="text-3xl font-bold">Welcome, <%= user.username %>!</h1>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-gray-800 p-6 rounded-xl shadow">
        <h2>Total Tickets</h2>
        <p class="text-3xl"><%= stats.total %></p>
    </div>
    <div class="bg-gray-800 p-6 rounded-xl shadow">
        <h2>Open</h2>
        <p class="text-3xl text-yellow-400"><%= stats.open %></p>
    </div>
    <div class="bg-gray-800 p-6 rounded-xl shadow">
        <h2>Closed</h2>
        <p class="text-3xl text-green-400"><%= stats.closed %></p>
    </div>
</div>
`
}) %>
